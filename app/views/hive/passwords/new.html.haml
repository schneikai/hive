- hive_title t('.title')

.hive-passwords.hive-passwords-new{ class: "#{hive_animation_class}" }
  = twitter_bootstrap_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f|
    = f.errors only: :base

    %h2
      = link_to Hive.app_name, root_url
      %span= t('.title')

    = f.email_field :email, autofocus: true

    = f.actions do
      = f.submit t('.submit'), class: 'btn btn-lg btn-primary btn-block', data: { disable_with: t('.submitting') }

    = render 'hive/shared/links'
