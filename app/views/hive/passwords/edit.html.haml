-# Remember: This is for non-authenticated users to change reset password
-# using a reset token they got via mail.

- hive_title t('.title')

.hive-passwords.hive-passwords-edit{ class: "#{hive_animation_class}" }
  = twitter_bootstrap_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f|
    = f.errors only: :base
    = f.hidden_field :reset_password_token

    %h2
      = link_to Hive.app_name, root_url
      %span= t('.title')

    = f.password_field :password, t('.new_password'), autofocus: true
    = f.password_field :password_confirmation, t('.confirm_new_password')

    = f.actions do
      = f.submit t('.submit'), class: 'btn btn-lg btn-primary btn-block', data: { disable_with: t('.submitting') }

    = render 'hive/shared/links'
