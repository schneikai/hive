-# Remember: This is for non-authenticated users to reset their password
-# using a reset token they got via mail.

.hive.hive-passwords.hive-passwords-edit{ class: "#{hive_animation_class}" }
  = simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f|
    = f.flash_error :base

    = f.input :reset_password_token, as: :hidden

    = render "hive/shared/header"

    = f.input :password, required: true, input_html: { autofocus: true }
    = f.input :password_confirmation, required: true

    = f.button :submit, t('.submit'), class: 'btn-lg btn-primary btn-block', data: { disable_with: t('.submitting') }

    = render "hive/shared/footer"
