.hive.hive-confirmations.hive-confirmations-new{ class: "#{hive_animation_class}" }
  = simple_form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: { method: :post } ) do |f|
    = f.flash_error :base
    = f.flash_error :confirmation_token

    = render "hive/shared/header"

    = f.input :email, required: true, input_html: { value: user_signed_in? ? current_user.email : nil, autofocus: true }

    = f.button :submit, t('.submit'), class: 'btn-lg btn-primary btn-block', data: { disable_with: t('.submitting') }

    = render "hive/shared/footer"
