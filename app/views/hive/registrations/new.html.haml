- hive_title t('.title')

.hive-registrations.hive-registrations-new{ class: "#{hive_animation_class}" }
  = twitter_bootstrap_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { data: { validate: true, model: resource_name, id: resource.id } }) do |f|
    = f.errors only: :base

    %h2
      = link_to Hive.app_name, root_url
      %span= t('.title')

    = f.email_field :email, :autofocus => true

    - attributables(resource, optional: false, except: :newsletter).each do |name, options|
      = f.attributable name

    - if resource.password_required?
      = f.password_field :password
      = f.password_field :password_confirmation if Hive.registration_requires_password_confirmation

    - attributables(resource, only: :newsletter).each do |name, options|
      = f.attributable name

    = f.check_box :accept_terms if resource.must_accept_terms_on_sign_up?

    = f.actions do
      = f.submit t('.submit'), class: 'btn btn-lg btn-primary btn-block', data: { disable_with: t('.submitting') }

    = render "hive/shared/links"
